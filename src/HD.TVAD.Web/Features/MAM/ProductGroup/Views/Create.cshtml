@using HD.TVAD.Web.Services
@{
	Layout = null;
}
@model ProductGroupCreateViewModel
@inject IProductGroupViewService _productGroupViewService
@{
	var productGroupSelectItems = await _productGroupViewService.GetSelectListItemAsync();
}
<form id="create-form" asp-area="MAM" asp-controller="ProductGroup" asp-action="Create" method="post" enctype="multipart/form-data" class="form-horizontal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<h4 class="modal-title">@Localizer["Add Product Group"]</h4>
	</div>
	<div class="modal-body">

		<h3 class="text-center text-danger"> @ViewBag.Message</h3>

		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="ParentId">@Localizer["Parent"]:</label>
			</div>
			<div class="col-md-8">
				<select asp-for="ParentId" class="form-control" type="text" asp-items="productGroupSelectItems">
					<option value="">@Localizer["None"]</option>
				</select>
				<span asp-validation-for="ParentId" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="Code">@Localizer["Code"]:</label>
			</div>
			<div class="col-md-8">
				<input asp-for="Code" class="form-control" type="text" autofocus />
				<span asp-validation-for="Code" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="Name">@Localizer["Name"]:</label>
			</div>
			<div class="col-md-8">
				<input asp-for="Name" class="form-control" type="text" autofocus />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="Description">@Localizer["Description"]:</label>
			</div>
			<div class="col-md-8">
				<textarea class="form-control" type="text" asp-for="Description"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

		</div>

		<div class="modal-footer">
			<div class="text-center">
				<button id="submit" type="submit" value="" class="btn btn-primary"><span class="icon icon-action-create"></span> @Localizer["Create"] </button>
				<button type="button" class="btn btn-primary" data-dismiss="modal"><span class="icon icon-action-back"></span> @Localizer["Back"]</button>
			</div>
		</div>

	</div>
</form>


<script>
    require(['module/manager'], function (manager) {
        manager.common.submitForm.init({
            formId: 'create-form',
        });
    });
    $("#ParentId").on("change", function (e) {
    	GetCode();
    });
    function GetCode() {
    	$.ajax({
    		url: "MAM/ProductGroup/GetProductGroupCode",
    		type: 'GET',
    		data: { parentId: $("#ParentId").val() },
    		success: function (response) {
    			console.log(response);
    			var data = response;
    			$("#Code").val(data);
    		}
    	});
    };
    GetCode();
</script>



