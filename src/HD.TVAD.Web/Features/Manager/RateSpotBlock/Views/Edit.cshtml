@using HD.TVAD.ApplicationCore.Entities.Price
@{
	Layout = null;
}
@model RateSpotBlockViewModel
@inject ISpotBlockViewService _spotBlockViewService
@inject IRateSpotBlockViewService _rateSpotBlockViewService
@{
	var spotBlockSelectItems = await _spotBlockViewService.GetSelectListItemAsync();
	var priceTypeSelectItems = await _rateSpotBlockViewService.GetPriceTypeSelectListItemAsync();

	System.Globalization.CultureInfo customCulture = (System.Globalization.CultureInfo)System.Globalization.CultureInfo.CurrentUICulture.Clone();
	customCulture.NumberFormat.NumberDecimalSeparator = ".";
	System.Globalization.CultureInfo.CurrentCulture = customCulture;
}

<form id="create-form" asp-area="Manager" asp-controller="RateSpotBlock" asp-action="Edit" method="post" enctype="multipart/form-data" class="form-horizontal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<h4 class="modal-title">@Localizer["Edit"]</h4>
	</div>
	<div class="modal-body">

		<h3 class="text-center text-danger"> @ViewBag.Message</h3>


			<div class="form-group">
				<div class="col-md-4 control-label">
					<label asp-for="SpotBlockId"></label>
				</div>
				<div class="col-md-8">
					<select asp-for="SpotBlockId" class="form-control" asp-items="spotBlockSelectItems" disabled> </select>
					<span asp-validation-for="SpotBlockId" class="text-danger"></span>
				</div>
			</div>
		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="TypeId"></label>
			</div>
			<div class="col-md-8">
				<select asp-for="TypeId" class="form-control" type="number" asp-items="priceTypeSelectItems" disabled></select>
				<span asp-validation-for="TypeId" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="Name"></label>
			</div>
			<div class="col-md-8">
				<input asp-for="Name" class="form-control" type="text"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="Rate"></label>
			</div>
			<div class="col-md-8">
				<input asp-for="Rate" class="form-control" type="number" step="0.01" />
				<span asp-validation-for="Rate" class="text-danger"></span>
			</div>
		</div>
		<div class="modal-footer">
			<div class="text-center">
				<button id="submit" type="submit" value="" class="btn btn-primary"><span class="icon icon-action-save"></span> @Localizer["Save"] </button>
				<button type="button" class="btn btn-primary" data-dismiss="modal"><span class="icon icon-action-back"></span> @Localizer["Back"] </button>
			</div>
		</div>

	</div>
</form>


<script>
    require(['module/manager'], function (manager) {
        manager.common.submitForm.init({
            formId: 'create-form',
        });
    });
</script>



