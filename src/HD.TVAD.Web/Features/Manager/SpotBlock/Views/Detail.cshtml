@{
	Layout = null;
}
@model SpotBlockViewModel


<form id="detail-form" asp-area="Manager" asp-controller="SpotBlock" asp-action="Edit" method="post" enctype="multipart/form-data" class="form-inline">

		<h3 class="text-center text-danger"> @ViewBag.Message</h3>
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
				<label asp-for="Length"></label>
				<input class="form-control" type="text" asp-for="Length"/>
				<span asp-validation-for="Length" class="text-danger"></span>	
		</div>
		<div class="form-group">
				<label asp-for="Description"></label>
				<input class="form-control" type="text" asp-for="Description" >
				<span asp-validation-for="Description" class="text-danger"></span>				
		</div>
		<div class="form-group">
			<button id="submit" type="submit" value="" class="btn btn-primary"><span class="icon icon-action-save"></span> @Localizer["Save"] </button>
		</div>
</form>


<script>
    require(['module/manager'], function (manager) {
        manager.common.submitForm.init({
        	formId: 'detail-form',
        });
	});

</script>