@{
	Layout = null;
}
@model BenefitPriceCreateViewModel

@inject IBenefitTypeViewService _benefitTypeViewService
@inject ITimeBandViewService _timeBandViewService
@inject ISponsorProgramViewService _sponsorProgramViewService

@{
	var benefitTypeSelectItems = await _benefitTypeViewService.GetSelectListItemAsync();
	var timeBandSelectItems = await _timeBandViewService.GetSelectListItemAsync();
	var sponorProgramSlectItems = await _sponsorProgramViewService.GetCodeAndNameSelectListItemAsync();
}
<form id="create-form" asp-area="Manager" asp-controller="BenefitPrice" asp-action="Create" method="post" enctype="multipart/form-data" class="form-horizontal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<h4 class="modal-title">@Localizer["Create"]</h4>
	</div>
	<div class="modal-body">

		<h3 class="text-center text-danger"> @ViewBag.Message</h3>


		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="BenefitTypeId"></label>
			</div>
			<div class="col-md-8">
				<select asp-for="BenefitTypeId" class="form-control" type="text" asp-items="benefitTypeSelectItems">
				</select>
				<span asp-validation-for="BenefitTypeId" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="StartDate"></label>
			</div>
			<div class="col-md-8">
				<input asp-for="StartDate" class="form-control" type="date" />
				<span asp-validation-for="StartDate" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="Price"></label>
			</div>
			<div class="col-md-8">
				<input asp-for="Price" class="form-control" type="number" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
		</div>


		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="TimeBandIds"></label>
			</div>
			<div class="col-md-8">
				<select asp-for="TimeBandIds" size="10" multiple class="form-control" type="text" asp-items="timeBandSelectItems"></select>
				<span asp-validation-for="TimeBandIds" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-4 control-label">
				<label asp-for="SponsorProgramIds"></label>
			</div>
			<div class="col-md-8">
				<select asp-for="SponsorProgramIds" size="10" multiple class="form-control" type="text" asp-items="sponorProgramSlectItems"></select>
				<span asp-validation-for="SponsorProgramIds" class="text-danger"></span>
			</div>
		</div>
		<div class="modal-footer">
			<div class="text-center">
				<button id="submit" type="submit" value="" class="btn btn-primary"><span class="icon icon-action-create"></span> @Localizer["Create"] </button>
				<button type="button" class="btn btn-primary" data-dismiss="modal"><span class="icon icon-action-back"></span> @Localizer["Back"] </button>
			</div>
		</div>

	</div>
</form>
<script>
    require(['module/manager'], function (manager) {
        manager.common.submitForm.init({
            formId: 'create-form',
        });
    });
</script>