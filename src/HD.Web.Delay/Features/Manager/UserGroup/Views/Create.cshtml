@{
	Layout = null;
}
@model UserGroupCreateViewModel
@inject IUserGroupViewService _userGroupViewService
@{
	var userGroups = await _userGroupViewService.GetSelectListItemAsync();
}
<form id="create-group-form" asp-area="Manager" asp-controller="UserGroup" asp-action="Create" method="post" enctype="multipart/form-data"  class="form-horizontal">

	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<h4 class="modal-title">@Localizer["Create group"]</h4>
	</div>
	<div class="modal-body">
		<input type="hidden" asp-for="ParentId" />
		<div class="form-group">
			<div class="col-md-4">
				<label asp-for="ParentId"></label>
			</div>
			<div class="col-md-8">
				<select readonly class="form-control disabled" disabled asp-items="userGroups" asp-for="ParentId">					
				</select>
				<span asp-validation-for="ParentId" class="text-danger"></span>
			</div>
		</div>
			<div class="form-group">
				<div class="col-md-4">
					<label asp-for="Name"></label>
				</div>
				<div class="col-md-8">
					<input class="form-control" asp-for="Name" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
	</div>
	<div class="modal-footer">
		<div class="text-center">
			<button type="submit" value="" class="btn btn-primary" onclick=""><span class="icon icon-plus"></span> @Localizer["Create"] </button>
			<button type="button" class="btn btn-primary" data-dismiss="modal"><span class="icon icon-back"></span>@Localizer["Back"]</button>
		</div>
	</div>

</form>
<script>
	require(['module/manager'], function (manager) {
		manager.common.submitForm.init({
			formId: 'create-group-form'
		});
	});
</script>