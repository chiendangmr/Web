@{
    Layout = null;
    ViewBag.Title = "Edit Asset Locator";
}
@model HD.TVAD.Web.Storage.Models.AssetLocatorViewModel
@inject IAssetsService _assetService
@inject IStorageLocationService _storageLocationService
@inject IMineTypeService _mineTypeService
@{ 
    var _assetItems = await _assetService.GetAll()
        .Select(p => new SelectListItem()
        {
            Value = p.Id.ToString(),
            Text = p.Name,
        }).ToListAsync();
    var _storageLocationItems = await _storageLocationService.GetAll()
        .Select(p => new SelectListItem()
        {
            Value = p.Id.ToString(),
            Text = p.Name,
        }).ToListAsync();
    var _mineTypeItems = await _mineTypeService.GetAll()
        .Select(p => new SelectListItem()
        {
            Value = p.InternetMediaType,
            Text = p.Name,
        }).ToListAsync();
}

<form id="edit-form" method="post" enctype="multipart/form-data" asp-area="Tools" asp-controller="Storage" asp-action="EditAssetLocator" class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">@Localizer["Edit Asset Locator"]</h4>
    </div>
    <div class="modal-body">

        <h3 class="text-center text-danger"> @ViewBag.Message</h3>

        <div class="form-group" hidden>
            <input asp-for="Id" class="form-control" value="@Model.Id" />
        </div>
        <div class="form-group">
            <div class="col-md-4 control-label">
                <label asp-for="AssetId">Asset</label>
            </div>
            <div class="col-md-8">
                <select asp-for="AssetId" class="form-control" asp-items="_assetItems"></select>
                <span asp-validation-for="AssetId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 control-label">
                <label asp-for="ContainerMineType">Container Mine Type</label>
            </div>
            <div class="col-md-8">
                <select asp-for="ContainerMineType" class="form-control" asp-items="_mineTypeItems"></select>
                <span asp-validation-for="ContainerMineType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 control-label">
                <label asp-for="StorageLocationId">Storage Location</label>
            </div>
            <div class="col-md-8">
                <select asp-for="StorageLocationId" class="form-control" asp-items="_storageLocationItems"></select>
                <span asp-validation-for="StorageLocationId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 control-label">
                <label asp-for="UploadedDate"></label>
            </div>
            <div class="col-md-8">
                <input class="form-control" type="date" asp-for="UploadedDate"/>
                <span asp-validation-for="UploadedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 control-label">
                <label asp-for="Path"></label>
            </div>
            <div class="col-md-8">
                <input class="form-control" type="text" asp-for="Path" />
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 control-label">
                <label asp-for="Revision"></label>
            </div>
            <div class="col-md-8">
                <input class="form-control" type="number" asp-for="Revision" />
                <span asp-validation-for="Revision" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <div class="text-center">
                <button id="submit" type="submit" value="Update" class="btn btn-primary"><span class="icon icon-action-edit"></span> @Localizer["Update"] </button>
                <button type="button" class="btn btn-primary" data-dismiss="modal"><span class="icon icon-action-back"></span> @Localizer["Back"]</button>
            </div>
        </div>

    </div>
</form>
<script>
    require(['module/manager'], function (manager) {
        manager.common.submitForm.init({
            formId: 'edit-form',
        });
    });

</script>



